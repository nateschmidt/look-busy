<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <div class="d-flex justify-content-between align-items-center">
            <h2 class="h4 mb-0">
              <i class="bi bi-calendar-event me-2"></i>Meeting Details
            </h2>
            <div>
              <%= link_to edit_recurring_meeting_path(@recurring_meeting), class: "btn btn-light btn-sm" do %>
                <i class="bi bi-pencil me-1"></i>Edit
              <% end %>
            </div>
          </div>
        </div>
        <div class="card-body p-4">
          <div class="row">
            <div class="col-md-6 mb-3">
              <h5 class="text-muted mb-2">
                <i class="bi bi-calendar-event me-1"></i>Meeting Name
              </h5>
              <p class="h6"><%= @recurring_meeting.name %></p>
            </div>
            
            <div class="col-md-6 mb-3">
              <h5 class="text-muted mb-2">
                <i class="bi bi-person me-1"></i>Person
              </h5>
              <p class="h6"><%= @recurring_meeting.person %></p>
            </div>
            
            <div class="col-md-6 mb-3">
              <h5 class="text-muted mb-2">
                <i class="bi bi-clock me-1"></i>Frequency
              </h5>
              <div>
                <span class="badge bg-primary fs-6 mb-1"><%= @recurring_meeting.frequency_display %></span>
                <% if @recurring_meeting.is_meeting_this_week? %>
                  <span class="badge bg-success fs-6">This Week</span>
                <% end %>
              </div>
            </div>
            
            <div class="col-md-6 mb-3">
              <h5 class="text-muted mb-2">
                <i class="bi bi-calendar me-1"></i>Next Meeting
              </h5>
              <p class="h6"><%= @recurring_meeting.next_meeting_date.strftime("%B %d, %Y") %></p>
            </div>
            
            <% if @recurring_meeting.frequency == 'bi_weekly' %>
              <div class="col-md-6 mb-3">
                <h5 class="text-muted mb-2">
                  <i class="bi bi-calendar-week me-1"></i>Bi-weekly Pattern
                </h5>
                <p class="h6"><%= @recurring_meeting.biweekly_pattern_display %></p>
              </div>
            <% elsif @recurring_meeting.frequency == 'monthly' %>
              <div class="col-md-6 mb-3">
                <h5 class="text-muted mb-2">
                  <i class="bi bi-calendar-week me-1"></i>Week of Month
                </h5>
                <p class="h6">Week <%= @recurring_meeting.week_of_month %></p>
              </div>
            <% elsif @recurring_meeting.frequency == 'quarterly' %>
              <div class="col-md-6 mb-3">
                <h5 class="text-muted mb-2">
                  <i class="bi bi-calendar-week me-1"></i>Week of Month
                </h5>
                <p class="h6">Week <%= @recurring_meeting.week_of_month %></p>
              </div>
              <div class="col-md-6 mb-3">
                <h5 class="text-muted mb-2">
                  <i class="bi bi-calendar-month me-1"></i>Month of Quarter
                </h5>
                <p class="h6">Month <%= @recurring_meeting.month_of_quarter %></p>
              </div>
            <% end %>
          </div>
          
          <div class="mt-4 pt-3 border-top">
            <div class="d-flex gap-2">
              <%= link_to recurring_meetings_path, class: "btn btn-outline-primary" do %>
                <i class="bi bi-arrow-left me-1"></i>Back to Meetings
              <% end %>
              
              <%= link_to @recurring_meeting, data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this meeting?' }, class: "btn btn-outline-danger" do %>
                <i class="bi bi-trash me-1"></i>Delete Meeting
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
