<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <div class="d-flex justify-content-between align-items-center">
            <h2 class="h4 mb-0">
              <i class="bi bi-target me-2"></i>Goal Details
            </h2>
            <div>
              <%= link_to edit_goal_path(@goal), class: "btn btn-light btn-sm" do %>
                <i class="bi bi-pencil me-1"></i>Edit
              <% end %>
            </div>
          </div>
        </div>
        <div class="card-body p-4">
          <div class="row">
            <div class="col-md-6 mb-3">
              <h5 class="text-muted mb-2">
                <i class="bi bi-target me-1"></i>Goal Description
              </h5>
              <p class="h6"><%= @goal.description %></p>
            </div>
            
            <div class="col-md-6 mb-3">
              <h5 class="text-muted mb-2">
                <i class="bi bi-number me-1"></i>Weekly Target
              </h5>
              <span class="badge bg-success fs-6"><%= @goal.target_count %></span>
            </div>
          </div>
          
          <div class="mt-4 pt-3 border-top">
            <div class="d-flex gap-2">
              <%= link_to goals_path, class: "btn btn-outline-primary" do %>
                <i class="bi bi-arrow-left me-1"></i>Back to Goals
              <% end %>
              
              <%= link_to @goal, method: :delete, data: { confirm: 'Are you sure you want to delete this goal?' }, class: "btn btn-outline-danger" do %>
                <i class="bi bi-trash me-1"></i>Delete Goal
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
