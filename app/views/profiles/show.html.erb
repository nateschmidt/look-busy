<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-secondary text-white">
          <h3 class="h5 mb-0">
            <i class="bi bi-person-circle me-2"></i>Profile
          </h3>
        </div>
        <div class="card-body">
          <div class="row mb-4">
            <div class="col-sm-3">
              <strong>Email:</strong>
            </div>
            <div class="col-sm-9">
              <%= @user.email %>
            </div>
          </div>
          
          <div class="row mb-4">
            <div class="col-sm-3">
              <strong>Member since:</strong>
            </div>
            <div class="col-sm-9">
              <%= @user.created_at.strftime("%B %d, %Y") %>
            </div>
          </div>
          
          <div class="row mb-4">
            <div class="col-sm-3">
              <strong>Last sign in:</strong>
            </div>
            <div class="col-sm-9">
              <% if @user.last_sign_in_at %>
                <%= @user.last_sign_in_at.strftime("%B %d, %Y at %I:%M %p") %>
              <% else %>
                Never
              <% end %>
            </div>
          </div>
          
          <div class="row mb-4">
            <div class="col-sm-3">
              <strong>Sign in count:</strong>
            </div>
            <div class="col-sm-9">
              <%= @user.sign_in_count || 0 %>
            </div>
          </div>
          
          <div class="d-flex gap-2">
            <%= link_to edit_profile_path, class: "btn btn-primary" do %>
              <i class="bi bi-pencil me-1"></i>Edit Profile
            <% end %>
            <%= link_to weekly_dashboard_path, class: "btn btn-outline-secondary" do %>
              <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
